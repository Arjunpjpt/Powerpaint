package view;

import java.awt.Color;
import java.awt.Shape;


/**
 * This class can store the information of each shape which has drawn in the panel.
 * 
 * @author Arjun Prajapati
 * @version November 11, 2017
 */
public class PaintShape {
    /** Shape to draw. */
    private final Shape myShape;
    
    /** color to draw. */
    private final Color myColor;
    
    /** the thickness of the drawing shape. */
    private final int myThickness;
    
    
    
    
    /**
     * The constructor to initialize the field.
     * 
     * @param theShape 
     * @param theColor 
     * @param theThickness 
     */
    public PaintShape(final Shape theShape,
                      final int theThickness,
                      final Color theColor) {
        myShape = theShape;
        myThickness = theThickness;
        myColor = theColor;
    }
    
    /**
     * method return the shape.
     * @return Shape
     */
    public Shape getShape() {
        return myShape;
    }
    
    /**
     * method returns the color to draw.
     * @return Color
     */
    public Color getColor() {
        return myColor;
    }
    
    /**
     * method returns the thickness.
     * @return integer
     */
    public int getThickness() {
        return myThickness;
    }

}
